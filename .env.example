################################################################################
# Financial Intelligence Platform - Environment Configuration
# 
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!
################################################################################

# ===== SUPABASE / DATABASE =====
# Get these from https://supabase.com -> Project Settings -> API Keys

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Anon key (for client-side requests)
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service role key (for server-side requests, keep secret!)
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===== DATA PIPELINE =====

# Number of days of historical data to fetch on first run
LOOKBACK_DAYS=365

# Minimum number of active assets required to run pipeline
MIN_ASSETS_REQUIRED=50

# Delay between Yahoo Finance API requests (seconds)
# Set lower for testing (e.g., 5), higher for production (e.g., 60)
YF_DELAY_BETWEEN_REQUESTS=20.0

# Whether to respect server rate-limit headers
YF_RESPECT_SERVER=true

# ===== ANALYTICS =====

# Window size for rolling correlation analysis (days)
CORRELATION_WINDOW_DAYS=252

# Statistical significance threshold for cointegration tests (0.01 = 1%, 0.05 = 5%)
COINTEGRATION_SIGNIFICANCE=0.05

# Minimum correlation threshold to include pairs in analysis
MIN_PAIR_CORRELATION=0.5

# Maximum number of pairs to analyze per run
MAX_PAIRS_TO_ANALYZE=100

# ===== API SERVER =====

# FastAPI host binding
API_HOST=0.0.0.0

# FastAPI port
API_PORT=8000

# Enable CORS for frontend requests
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ===== FRONTEND =====

# Frontend URL (for API redirects)
FRONTEND_URL=http://localhost:5173

# ===== LOGGING =====

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log output directory (leave empty for stdout only)
LOG_DIR=./logs

# ===== OPTIONAL: DEPLOYMENT =====

# Environment type: development, staging, production
ENVIRONMENT=development

# Enable debug mode (verbose logging, helpful for development)
DEBUG=false

# ===== OPTIONAL: NOTIFICATIONS =====

# Slack webhook for alerts (leave empty to disable)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email for error notifications (leave empty to disable)
ALERT_EMAIL=

# ===== OPTIONAL: TELEMETRY =====

# Send anonymized usage data for improvement (true/false)
TELEMETRY_ENABLED=false

################################################################################
# NOTES:
# 
# 1. Database: Create a free Supabase account at https://supabase.com
#    - Create a new project
#    - Go to Settings > API Keys
#    - Copy URL and anon key (SUPABASE_URL, SUPABASE_KEY)
#    - Copy service role key (SUPABASE_SERVICE_KEY)
# 
# 2. Rate Limiting:
#    - Production: Use 60s (respects Yahoo Finance limits)
#    - Development: Use 5-10s (faster testing)
#    - Local: Use 20s (good balance)
# 
# 3. Security:
#    - This file (.env) is in .gitignore and NOT tracked
#    - Never share SUPABASE_SERVICE_KEY
#    - Use GitHub Actions secrets for CI/CD
# 
# 4. Testing:
#    - Set LOOKBACK_DAYS=30 for quick testing
#    - Set MIN_ASSETS_REQUIRED=5 to test with few symbols
# 
################################################################################
